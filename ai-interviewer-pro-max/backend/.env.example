# AI Interviewer Pro Max - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/ai_interviewer
# For SQLite (development only):
# DATABASE_URL=sqlite:///./ai_interviewer.db

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ===========================================
# AI API KEYS (REQUIRED FOR AI FEATURES)
# ===========================================
# Gemini API - For deep analysis, planning, evaluation, reporting
GEMINI_API_KEY=

# Groq API - For real-time conversation, follow-ups
GROQ_API_KEY=

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_ENV=development
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=./uploads

# ===========================================
# INTERVIEW SETTINGS
# ===========================================
DEFAULT_QUESTION_COUNT=10
MAX_FOLLOW_UPS_PER_QUESTION=2
DEFAULT_TIME_LIMIT_MINUTES=45
